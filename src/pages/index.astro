---
import MainLayout from '../MainLayout/MainLayout.astro';
import { Image } from 'astro:assets';
import Right from '../Image/right5.png';
import { findCurrentLang } from '../Helper/helper.ts';
const languages = await Astro.glob('../I18/*.json');
const lang = findCurrentLang(languages);

---

<MainLayout title='Marcel Steiner | Praktikumsprojekt'>

	<div class="MainDivIndex">

		<div class="ButtonFeldLeftIndex">
			<div class="ButtonLeftIndex">
				<div class="ButtonTextIndex">

				</div>
			</div>
		</div>

		<div class="MainTextIndex">

			<div>
				{lang.f0.headline}
			</div>
			
			<div class="HauptTextIndex">
				<div class="Indexborder1">
				</div>
				<div class="TextIndex">
					{lang.f0.header}
				</div>

				<div class="UnterTextIndex">
					<div>
						{lang.f0.header2}
					</div>
					<div class="Indexborder2">
					</div>
			  	</div>
			</div>

		</div>

		<div class="ButtonFeldRight">
			<div class="ButtonRight">
				<div class="ButtonText">
					<a href="/f1"> <Image src={Right} alt="bild" /></a>
				</div>
			</div>
		</div>

	</div>

</MainLayout>

		

<style>

body{
  background-image: url(../Image/Hintergrund4.png); 
  color: white;
}

</style>